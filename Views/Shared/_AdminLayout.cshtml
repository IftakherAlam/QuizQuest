<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin Panel | QuizQuest</title>

    <!-- ✅ Bootstrap & FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- ✅ Custom Admin CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #586a7c ;">
            <div class="container-fluid">
                
                <a class="navbar-brand ms-2" asp-controller="Admin" asp-action="Index">Admin Panel</a>

                <!-- ✅ Right-Aligned Buttons -->
                <div class="btn-group ms-auto">
                     <button class="btn btn-secondary" id="themeToggle">
                        <i id="themeIcon" class="fas fa-moon"></i> <!-- Default Icon -->
                   <button>
                   <form method="post" asp-controller="Account" asp-action="Logout">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>

                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ Sidebar (Initially Hidden, Toggle with JS) -->
    <div class="container-fluid">
        <div class="row">
            <nav id="adminSidebar" class="d-md-block sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Admin" asp-action="Index">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="ManageUsers">
                            <i class="fas fa-users"></i> Manage Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="ManageTemplates">
                            <i class="fas fa-file-alt"></i> Manage Templates
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Analytics">
                            <i class="fas fa-chart-line"></i> Analytics
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- ✅ Main Content -->
            <main class="admin-content col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="admin-header">
                    <h1 class="h2">@ViewData["Title"]</h1>
                </div>
                <div>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="admin-footer">
        <p>&copy; @DateTime.Now.Year - Admin Panel | QuizQuest</p>
    </footer>

    <!-- ✅ Bootstrap & Custom Scripts -->
    <script src="~/js/theme.js"></script>
    <script src="~/js/admin.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
