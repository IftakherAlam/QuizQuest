@model QuizFormsApp.Models.Form

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">üìú Form Submission</h2>
            <h4 class="mt-2">@Model.Template.Title</h4>
        </div>
        <div class="card-body">
            <p><strong>üë§ Submitted By:</strong> @Model.User?.UserName (@Model.User?.Email)</p>
            <p><strong>üìÖ Submission Date:</strong> @Model.SubmissionDate.ToString("yyyy-MM-dd HH:mm")</p>

            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>üìù Question</th>
                        <th>‚úÖ Answer</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var answer in Model.Answers)
                    {
                        <tr>
                            <td><strong>@answer.Question.Text</strong></td>
                            <td>
                                @if (!string.IsNullOrEmpty(answer.TextValue))
                                {
                                    <span class="text-primary">@answer.TextValue</span>
                                }
                                else if (answer.IntegerValue.HasValue)
                                {
                                    <span class="text-success">@answer.IntegerValue</span>
                                }
                                else if (answer.BooleanValue.HasValue)
                                {
                                    @if (answer.BooleanValue.Value)
                                    {
                                        <span class="badge bg-success">‚úî Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">‚ùå No</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">No response provided</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a asp-action="CreatorSubmissions" asp-route-templateId="@Model.Template.Id" class="btn btn-secondary">‚¨Ö Back to Submissions</a>
        </div>
    </div>
</div>
