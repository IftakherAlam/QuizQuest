@model QuizFormsApp.Models.Template

<h2>📑 Submissions for @Model.Title</h2>

@if (!Model.Forms.Any())
{
    <div class="alert alert-warning">No submissions yet for this template.</div>
}
else
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>👤 User</th>
                <th>📅 Submission Date</th>
                <th>🔍 View</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var form in Model.Forms)
            {
                <tr>
                    <td>@form.User?.UserName (@form.User?.Email)</td>
                    <td>@form.SubmissionDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="ViewSubmission" asp-route-formId="@form.Id" class="btn btn-info btn-sm">
                            📜 View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-action="CreatorDashboard" asp-controller="Profile" asp-area="" class="btn btn-secondary mt-3">⬅ Back to Dashboard</a>


