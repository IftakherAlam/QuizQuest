@model IEnumerable<QuizFormsApp.Models.Template>

<h2>Search Results</h2>

<form method="get">
    <input type="text" name="query" placeholder="Search templates..." class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (!Model.Any())
{
    <p class="mt-3">No results found.</p>
}
else
{
    <div class="row mt-3">
        @foreach (var template in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3 shadow">
                    <div class="card-body">
                        <h5 class="card-title">@template.Title</h5>
                        <p class="card-text">@template.Description</p>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@template.Id">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
