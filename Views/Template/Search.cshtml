@model List<QuizFormsApp.Models.Template>

@{
    ViewData["Title"] = "Search Results";
}

<h2>üîçSearch Results</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">No templates found for your search.</div>
}
else
{
    <div class="list-group">
        @foreach (var template in Model)
        {
            <a asp-controller="Template" asp-action="Details" asp-route-id="@template.Id" class="list-group-item list-group-item-action">
                <h5>@template.Title</h5>
                <p class="text-muted">@template.Description</p>
                <p><strong>Author:</strong> @template.Author.DisplayName</p>
            </a>
        }
    </div>
}
