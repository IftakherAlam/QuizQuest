<h3>Questions</h3>
<a class="btn btn-primary" asp-controller="Question" asp-action="Create" asp-route-templateId="@Model.Id">Add Question</a>

<table class="table">
    <thead>
        <tr>
            <th>Question</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Model.Questions)
        {
            <tr>
                <td>@question.Text</td>
                <td>@question.Type</td>
            </tr>
        }
    </tbody>
</table>