@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Users";
}

<h2 class="mb-4">Manage Users</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    @if (user.IsBlocked)
                    {
                        <span class="badge bg-danger">Blocked</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            ‚öô Actions
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <form asp-action="MakeAdmin" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="dropdown-item">‚≠ê Make Admin</button>
                                </form>
                            </li>
                            <li>
                                <form asp-action="RemoveAdmin" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="dropdown-item">‚ùå Remove Admin</button>
                                </form>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-action="MakeCreator" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="dropdown-item">üé® Make Creator</button>
                                </form>
                            </li>
                            <li>
                                <form asp-action="RemoveCreator" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="dropdown-item">‚ùå Remove Creator</button>
                                </form>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-action="MakeUser" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="dropdown-item">üë§ Make User</button>
                                </form>
                            </li>
                            <li>
                                <form asp-action="RemoveUser" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="dropdown-item">‚ùå Remove User</button>
                                </form>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            @if (user.IsBlocked)
                            {
                                <li>
                                    <form asp-action="UnblockUser" method="post">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="dropdown-item text-success">‚úÖ Unblock</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <form asp-action="BlockUser" method="post">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="dropdown-item text-danger">‚õî Block</button>
                                    </form>
                                </li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-action="DeleteUser" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="dropdown-item text-danger">üóë Delete</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var dropdowns = document.querySelectorAll('.dropdown-toggle');
            dropdowns.forEach(function (dropdown) {
                new bootstrap.Dropdown(dropdown);
            });
        });
    </script>
}
